{
  "name": "chvetyk-backend",
  "version": "1.0.0",
  "description": "Backend for Telegram Bot with Mini App",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "build:frontend": "npm --prefix ../frontend run build",
    "build:monolith": "npm run build:frontend && npm run build",
    "start:monolith": "npm run build:monolith && npm start",
    "dev:monolith": "concurrently \"npm --prefix ../frontend run dev\" \"npm run dev\"",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "migrate": "tsx src/database/migrate.ts",
    "migrate:sql": "psql -h $DB_HOST -U $DB_USER -d $DB_NAME -f src/database/migrations/001_initial_schema.sql",
    "seed": "tsx src/database/seed.ts"
  },
  "keywords": [
    "telegram",
    "bot",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.22.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "pg": "^8.11.3",
    "redis": "^4.6.11",
    "telegraf": "^4.15.4",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
